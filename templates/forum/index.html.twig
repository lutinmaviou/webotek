{% extends "base.html.twig" %}

{% block body %}
<div class="text-center forum-title pb-5">
    <h1>Liste des forums</h1>
</div>

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-sm-10">

            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col" class="text-center">SUJETS</th>
                        {#<th scope="col">AUTEUR</th>#}
                        <th scope="col" class="text-center">Date de création</th>
                    </tr>
                </thead>
                <tbody>
                    {% for forum in forums %}

                    <tr>
                        <td>
                            <a href="{{ path('app_forum_display', {slug: forum.slug}) }}">{{ forum.topic }}</a>
                        </td>
                        <td class="text-center">{{ forum.creationDate | date('d/m/Y') }}</td>
                    </tr>

                    {% endfor %}

                </tbody>
            </table>

            <div class="pagination justify-content-center mt-4 mb-5">
                {{ knp_pagination_render(forums) }}
            </div>

            <div class="col-md-8 mx-auto mt-4 mb-5 text-center rounded shadow connect-card">
                <h4 class="text-center mb-3">Créer un nouveau forum</h4>
                {{ form_start(new_forum_form) }}
                {{ form_row(new_forum_form.topic, {'label': 'Sujet', 'value': ''}) }}
                <button type="submit" class="btn btn-success mt-2">Valider</button>
                {{ form_end(new_forum_form) }}
            </div>
        </div>
    </div>
</div>

{% endblock %}