{% extends "base.html.twig" %}

{% block title %}
Accueil - webOtek - La grande bibliothèque en ligne
{% endblock %}

{% block description %}
webOtek - La grande bibliothèque en ligne. Page d'accueil et de recherche de livres dans la base de données de l'API
Google Books.
{% endblock %}
{# Navigation bar settings according to user role #}
{% block home_link %}
<li class="nav-item">
    <a class="nav-link js-scroll-trigger" href="#page-top">Accueil</a>
</li>
<li class="nav-item">
    <a class="nav-link js-scroll-trigger" href="#categories">Catégories</a>
</li>
    <li class="nav-item">
    <a class="nav-link js-scroll-trigger" href="#contact">Contact</a>
</li>
{% endblock %}

{% block body %}

<!-- Masthead -->
<header class="masthead">
    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center text-center">
            {% if app.user %}
            <p id="hello">Bonjour {{ app.user.pseudo }} !</p>
            {% endif %}
            <div class="col-lg-10 align-self-end">
                <h1 class="text-uppercase text-white font-weight-bold mb-5">La grande bibliothèque en ligne</h1>
            </div>
            <div class="col-lg-8 align-self-baseline">
                <div class="input-group mb-3 mt-5" id="search-bar">
                    <input class="btn btn-primary btn-xl js-scroll-trigger" type="text" id="search"
                        placeholder="Rechercher un livre" required>
                    <div class="input-group-append">
                        <button type="button" id="btn-go">
                            <a href="#results" class="btn btn-primary js-scroll-trigger pb-2" id="go">GO</a>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Categories Section -->
<section class="page-section bg-primary" id="categories">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="text-white mt-0">Catégories</h2>
                <hr class="divider light my-4">
                <h3 class="text-white mt-5">Les plus populaires</h3>
                <div class="categories text-secondary">
                    <button value="Novels" class="btn btn-light btn-xl js-scroll-trigger cat-btn">
                        <a href="#results">Romans</a>
                    </button>
                    <button value="Fiction" class="btn btn-light btn-xl js-scroll-trigger cat-btn">
                        <a href="#results">Fiction</a>
                    </button>
                    <button value="History" class="btn btn-light btn-xl js-scroll-trigger cat-btn">
                        <a href="#results">Histoire</a>
                    </button>
                    <button value="Geography" class="btn btn-light btn-xl js-scroll-trigger cat-btn">
                        <a href="#results">Geographie</a>
                    </button>
                    <button value="Children" class="btn btn-light btn-xl js-scroll-trigger cat-btn">
                        <a href="#results">Enfants</a>
                    </button>
                    <button value="Medical" class="btn btn-light btn-xl js-scroll-trigger cat-btn">
                        <a href="#results">Médecine</a>
                    </button>
                    <button value="Art" class="btn btn-light btn-xl js-scroll-trigger cat-btn">
                        <a href="#results">Art</a>
                    </button>
                    <button value="Science" class="btn btn-light btn-xl js-scroll-trigger cat-btn">
                        <a href="#results">Science</a>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center">
        <select name="select" id="select" class="selectpicker" data-size="7" data-live-search="true" title="TOUTES">
            <option value="Art">Art</option>
            <option value="Education">Education</option>
            <option value="Fiction">Fiction</option>
            <option value="Business">Business</option>
            <option value="Children">Enfants</option>
            <option value="Computers">Informatique</option>
            <option value="Religion">Religion</option>
            <option value="Medical">Médecine</option>
            <option value="Psychology">Psychologie</option>
            <option value="Science">Sciences</option>
            <option value="History">Histoire</option>
            <option value="Travel">Voyages</option>
            <option value="Sports">Sports</option>
            <option value="Music">Musique</option>
            <option value="Thriller">Polars</option>
            <option value="Comics">Comics</option>
            <option value="Cinema">Cinema</option>
            <option value="Fantasy">Fantasy</option>
            <option value="Manga">Manga</option>
            <option value="Spirituality">Spiritualité</option>
            <option value="Literature">Littérature</option>
            <option value="Mystery">Paranormal</option>
            <option value="Horror">Horreur</option>
            <option value="Novels">Romans</option>
            <option value="Geography">Geographie</option>
        </select>
</section>

<!-- Results Section -->
<section id="results">
    <div id="display-results" class="container text-center"></div>
    <div id="display-button" class="mt-n1"></div>
</section>

<!-- Contact Section -->
<section class="page-section" id="contact">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="mt-0">Nous contacter</h2>
                <hr class="divider my-4 pb-5">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 ml-auto text-center mb-5 mb-lg-0">
                <i class="fas fa-phone fa-3x mb-3 text-muted"></i>
                <div>+33 (0)3 81 00 00 00</div>
            </div>
            <div class="col-lg-4 mr-auto text-center">
                <i class="fas fa-envelope fa-3x mb-3 text-muted"></i>
                <!-- Make sure to change the email address in anchor text AND the link below! -->
                <a class="d-block" href="#">contact@webotek.com</a>
            </div>
        </div>
    </div>
</section>
{% endblock %}