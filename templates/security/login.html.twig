{% extends 'base.html.twig' %}

{% block title %}Connexion - webOtek - La grande biblioth√®que en ligne{% endblock %}

{% block body %}

<div class="container connection text-center">
    <div class="row justify-content-center mt-5">
        <div class="col-sm-4">
            <form method="post">
                {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <h1 class="h3 mb-5 mt-lg-n5 font-weight-normal">Connexion</h1>
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                    required autofocus>
                <label for="inputPassword" class="mt-4">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>
                {#}
                <div class="checkbox mb-3">
                    <label for=""><input type="checkbox" value="remember-me">Se souvenir de moi
                    </label>
                </div>
                #}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html
                    
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                    #}

                <button class="btn btn-success mt-5" type="submit">Se connecter</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}